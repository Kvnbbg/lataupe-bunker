# Configuration Flask
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
PORT=5001

# Configuration Base de Données
DATABASE_URL=sqlite:///bunker.db

# Configuration Sécurité
SESSION_COOKIE_SECURE=False  # True en production avec HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# APIs Météo (optionnel pour intégration future)
OPENWEATHER_API_KEY=your_openweather_api_key_here
ACCUWEATHER_API_KEY=your_accuweather_api_key_here

# APIs Communication (optionnel pour intégration future)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=bunker@emergency.com

# APIs Qualité de l'Air (optionnel pour intégration future)
AIRVISUAL_API_KEY=your_airvisual_api_key_here

# Configuration MQTT (optionnel pour capteurs IoT)
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=bunker_user
MQTT_PASSWORD=secure_password

# Configuration Bunker
BUNKER_LOCATION=Paris,FR
BUNKER_ID=BUNKER_001
EMERGENCY_CONTACTS=+33123456789,admin@bunker.com

# Mode de fonctionnement
USE_REAL_APIS=false  # true pour utiliser de vraies API au lieu de la simulation
DEBUG_MODE=true      # false en production

